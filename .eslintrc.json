{
    "parser": "babel-eslint",
    "env": {
        "amd": true,
        "browser": true,
        "es6": true
    },
    "settings": {
        "react": {
            "version": "16.4.2" // React version
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "react/jsx-uses-vars": ["error"]
    }
}
